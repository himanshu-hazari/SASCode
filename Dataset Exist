%macro chk_dsn_exist(dsn=);
		%if %sysfunc(exist(&dsn)) %then %do;
			%let dsid=%sysfunc(open(&dsn));
		%end;
		%else %do;
			%put ERROR:&dsn does not exists.;
			%ABORT;
		%end;
		%if &dsid = 0 %then %do;
			%put ERROR:&dsn does not exists.;
			%let close=%sysfunc(close(&dsid));
			%ABORT;
		%end;
	%mend;
